# Network: 'devnet' or 'mainnet-beta'
SOLANA_NETWORK=devnet

# Wallet path (relative or absolute)
WALLET_PATH=./wallet.json

# Optional: Custom RPC URL
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Backup RPC URLs (comma-separated)
# BACKUP_RPC_URLS=https://solana-api.projectserum.com,https://rpc.ankr.com/solana

# Optional: Transaction retry count
MAX_TRANSACTION_RETRIES=3

# Optional: Custom commitment level
# COMMITMENT_LEVEL=confirmed

# Optional: Priority fee for mainnet (in lamports)
# MAINNET_PRIORITY_FEE=5000

# Optional: Default token decimals
DEFAULT_TOKEN_DECIMALS=9
