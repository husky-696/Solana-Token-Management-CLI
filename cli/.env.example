# Network Configuration
SOLANA_NETWORK=devnet # or mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com # Custom RPC URL (optional)

# Wallet Configuration
WALLET_PATH=~/.config/solana/id.json # Path to your wallet keypair
WALLET_PASSWORD= # Optional: Password for encrypted wallets

# Token Configuration
DEFAULT_TOKEN_DECIMALS=9
DEFAULT_TOKEN_SUPPLY=1000000

# Mainnet Safety Settings
MAINNET_MIN_BALANCE=0.1 # Minimum SOL balance required for mainnet operations
MAINNET_WARNING_THRESHOLD=0.5 # Balance threshold for warnings
MAINNET_CONFIRMATIONS=20 # Number of confirmations required for mainnet
MAINNET_MAX_RETRIES=3 # Maximum transaction retry attempts

# RPC Endpoints
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com
DEVNET_RPC_URL=https://api.devnet.solana.com

# Fee Settings
MAINNET_PRIORITY_FEE=0.00001 # Additional fee for mainnet transactions (in SOL)
MAX_TRANSACTION_FEE=0.1 # Maximum allowed transaction fee (in SOL)
